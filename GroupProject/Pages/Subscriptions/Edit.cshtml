@page
@model GroupProject.Pages.Subscriptions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Subscription</h4>
<hr />
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Subscription.SubscriptionID" />
            <div class="form-group">
                <label asp-for="Subscription.Client" class="control-label"></label>
                <select asp-for="Subscription.ClientID" class="form-control" asp-items="ViewBag.ClientID"></select>
                <span asp-validation-for="Subscription.ClientID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subscription.Package" class="control-label"></label>
                <select asp-for="Subscription.PackageID" class="form-control" asp-items="ViewBag.PackageID"></select>
                <span asp-validation-for="Subscription.PackageID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subscription.Date" class="control-label"></label>
                <input asp-for="Subscription.Date" class="form-control" />
                <span asp-validation-for="Subscription.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
