@page
@model GroupProject.Pages.Subscriptions.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Subscription</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Subscription.Client" class="control-label"></label>
                <select asp-for="Subscription.ClientID" class ="form-control" asp-items="ViewBag.ClientID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Subscription.Package" class="control-label"></label>
                <select asp-for="Subscription.PackageID" class ="form-control" asp-items="ViewBag.PackageID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Subscription.Date" class="control-label"></label>
                <input asp-for="Subscription.Date" class="form-control" />
                <span asp-validation-for="Subscription.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
